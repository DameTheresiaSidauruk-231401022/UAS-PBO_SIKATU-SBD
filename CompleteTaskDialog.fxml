<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="CENTER" maxWidth="350.0" spacing="15.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 20; -fx-border-color: #E0E0E0; -fx-border-radius: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sikatu.bantu_teman.controller.CompleteTaskDialogController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <children>
        <FontIcon iconColor="#A0C878" iconLiteral="fas-question-circle" iconSize="48" />
        <Label fx:id="taskNameLabel" text="Complete 'Project SIKATU'?" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="descriptionLabel" text="Description: Finalize all the features and prepare for deployment." textAlignment="CENTER" textFill="#666666" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="deadlineLabel" text="Deadline: 2025-06-21 17:00:00" textFill="#666666" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 10;" text="Cancel">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="completeButton" mnemonicParsing="false" onAction="#handleComplete" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #A0C878; -fx-background-radius: 10;" text="Complete" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>