<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="844.0" prefWidth="390.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sikatu.bantu_teman.controller.LoginController">
    <VBox alignment="CENTER" spacing="20" layoutX="45" layoutY="150" prefWidth="300">
        <Label text="Welcome SIKATU!" >
            <font><Font name="System Bold" size="28.0" /></font>
        </Label>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <TextField fx:id="emailField" promptText="Email Address" style="-fx-background-radius: 10; -fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 10;" prefHeight="50"/>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 10;" prefHeight="50"/>
            <Hyperlink text="Forgot password?" />
        </VBox>
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefHeight="50" prefWidth="300" style="-fx-background-color: #A0C878; -fx-background-radius: 25;" textFill="WHITE">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>
        <HBox alignment="CENTER" spacing="5">
            <Label text="Not a member?" />
            <Hyperlink text="Sign Up now" onAction="#handleSignUpLink" />
        </HBox>
        <Label fx:id="errorLabel" textFill="RED" />
    </VBox>
</AnchorPane>